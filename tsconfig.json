{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "**/__test__",
    "**/demo",
  ]
}
